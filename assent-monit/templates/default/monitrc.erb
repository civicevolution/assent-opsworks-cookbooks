set daemon 60
set alert admin@getassent.com
set mailserver <%= node[:monit][:mailserver][:host] %> port <%= node[:monit][:mailserver][:port] %>
  username "<%= node[:monit][:mailserver][:username] %>"
  password "<%= node[:monit][:mailserver][:password] %>"
  using <%= node[:monit][:mailserver][:ssl] %>
  with timeout 30 seconds
set eventqueue
  basedir /var/monit
  slots 100
set logfile syslog
Include <%= node[:monit][:conf_dir] %>/*.monitrc
set httpd port 2812 and use the address localhost
  allow localhost
